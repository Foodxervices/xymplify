$('span.help-block').html('')
<% if @success %>
  if($('#cart-details').length > 0) {
    $('#cart-details').html("<%= j render 'carts/details' %>")
    var order = $('.table-order[rel=<%= @order.id %>]').first()
    var item = order.find('.order-item[rel=<%= @item.id %>]').first()
    $('.h-scroll').first().scrollTop(order.offset().top - 100)

    $('.order-item').removeClass('active')
    item.addClass('active')
  }
  else {
    <%= open_popup(title: 'Cart', partial: 'carts/details') %> 
  }
<% else %>
  $('span.help-block[rel=<%= "#{@order.kitchen_id}-#{@item.food_item_id}" %>]').html("<br /><%= j @message.html_safe %>")
<% end %>