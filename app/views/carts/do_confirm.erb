<% if @success %>
  if($('#cart-details').length > 0) {
    $('#cart-details').html("<%= j render 'carts/details' %>")
  }
  <%= open_message(notice: "PO details confirmed. Click on purchase button to send your order.") %>
<% else %>
  <%= open_popup(title: "Confirmation for #{@order.name}", partial: 'carts/confirmation_form', locals: {order: @order}) %>
<% end %>